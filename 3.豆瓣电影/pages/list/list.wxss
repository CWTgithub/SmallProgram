.s-title{
	width: 100%;
	display: block;
	text-align: center;
	padding: 10px;
	background: #eee
}

.s-list{
	display: flex;
	margin: 10px ;
	font-size: 30rpx;
	box-sizing: border-box;
	padding-bottom: 10px;
	border-bottom: 1px solid #ccc;
}
.list-l{
	flex: 0 0 30%;
}
.s-list image{
	width: 150rpx;
	height: 150rpx;	
}

.list-c{
	flex: 0  0 60%;
	padding-left: 10px;
	line-height: 50rpx;
	box-sizing: border-box;
}
.list-r{
	flex: 0  0 10%;
	color: red;
	line-height:  150rpx;	
	text-align: center;
}
.m-title,.m-directors{
	display: block;
}
.m-genres{
	padding-left: 5px;
}
